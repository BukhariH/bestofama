<p id="notice"><%= notice %></p>

<h1><%= @entity.name %></h1>

<p>
  <b>Slug:</b>
  <%= @entity.slug %>
</p>

<p>
  <b>Tags:</b>
  <%= @entity.tag_list.map { |t| link_to t, tag_path(t) }.join(', ').html_safe %>
</p>

<p>
  <b>Content:</b>
  <%= @entity.content %>
</p>

<h3>Users</h3>
<table class="table">
  <tr>
    <th>Username</th>
    <th>Link</th>
    <th>Comment</th>
    <th>AMAs</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @entity.users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.link_karma %></td>
        <td><%= user.comment_karma %></td>
        <td><%= user.amas.count %></td>
        <td><%= link_to 'Show', admin_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Destroy', admin_entity_user_path(@entity, user), :method => :delete, :data => {:confirm => 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

<%= link_to 'Add User', new_admin_entity_user_path(@entity) %> |
<%= link_to 'Edit', edit_admin_entity_path(@entity) %> |
<%= link_to 'Back', admin_entities_path %>
