<div class="row">
  <div class="col-span-8">
    <h1>Social Link Icons</h1>
  </div>
  <div class="col-span-4" style="padding-top: 20px;">
    <%= link_to 'New Icon', new_admin_link_icon_path, :class => 'btn pull-right' %>
  </div>
</div>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Source</th>
    <th>Regex</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @entities_links_icons.each do |entities_links_icon| %>
      <tr>
        <td><%= entities_links_icon.name %></td>
        <td><%= entities_links_icon.source %></td>
        <td><%= entities_links_icon.regex %></td>
        <td><%= link_to 'Show', admin_link_icon_path(entities_links_icon) %></td>
        <td><%= link_to 'Edit', edit_admin_link_icon_path(entities_links_icon) %></td>
        <td><%= link_to 'Destroy', admin_link_icon_path(entities_links_icon), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>