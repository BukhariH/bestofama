<h1>AMA</h1>

<h4><%= link_to truncate(@ama.title, :length => 100), ama_path(@ama) %></h4>

<p>
  <b>Date:</b>
  <%= @ama.date %>
</p>

<p>
  <b>ID:</b>
  <%= @ama.id %>
</p>

<p>
  <b>Key:</b>
  <%= @ama.key %>
</p>

<p>
  <b>Karma:</b>
  <%= @ama.karma %>
</p>

<p>
  <b>User:</b>
  <%= @ama.user_id %>
</p>

<p>
  <b>Permalink:</b>
  <%= @ama.permalink %>
</p>

<p>
  <b>Posts:</b>
  <%= @ama.comments %>
</p>

<p>
  <b>Responses:</b>
  <%= @ama.responses %>
</p>

<h2 style="margin-top: 50px;">Users</h2>
<table class="table">
  <tr>
    <th>Username</th>
    <th>Link</th>
    <th>Comment</th>
    <th>AMAs</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @ama.users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.link_karma %></td>
        <td><%= user.comment_karma %></td>
        <td><%= user.amas.count %></td>
        <td><%= link_to 'Show', admin_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Destroy', admin_ama_user_path(@ama, user), :method => :delete, :data => {:confirm => 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

<%= link_to 'Add User', new_admin_ama_user_path(@ama) %> |
<%= link_to 'Edit', edit_admin_ama_path(@ama) %> |
<%= link_to 'Clean', clean_admin_amas_path(@ama) %> |
<%= link_to 'Delete', admin_ama_path(@ama), :method => :delete, :data => {:confirm => 'Are you sure?'} %>