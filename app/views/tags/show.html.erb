<% content_for :title, params[:tag] + " :: BestofAMA" %>
<div class="row">
  <div class="span6">
    <h1><%= params[:tag] %>
      <small><%= @entities.count %> results found</small>
    </h1>
  </div>
  <div class="span6" style="padding-top: 15px;">
    <ul class="breadcrumb">
      <li><strong>Order by:</strong></li>
      <li style="margin-left: 20px;"><%= image_tag("badges/grey.png") %> <%= link_to "Popularity", tag_path(params[:tag]) %>
        <span class="divider">|</span></li>
      <li><%= image_tag("badges/blue.png") %> <%= link_to "Comment Karma", tag_path(params[:tag], :order => "comment_karma") %>
        <span class="divider">|</span></li>
      <li><%= image_tag("badges/green.png") %> <%= link_to "Link Karma", tag_path(params[:tag], :order => "link_karma") %></li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="span12">
    <% @entities.each do |e| %>
        <hr/>
        <%= render :partial => "entities/snippet", :locals => { :e => e } %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="span12">
    <div class="pagination-centered">
      <%= will_paginate @entities %>
    </div>
  </div>
</div>
