<% content_for :title, params[:tag] + " :: BestofAMA" %>
<div class="row">
  <div class="span12">
    <h1><%= params[:tag] %></h1>
    <p><b>Related Tags:</b> <% @related_tags.each do |tag| %> <%= link_to tag.name, tag_path(tag.name) %> <% end %></p>
    <table class="table">
      <% @entities.each do |e| %>
      <tr>
        <td><h4><%= link_to e.name, entity_path(e) %><small> <%= e.content %></small></h4></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="row">
  <div class="span12">
    <div class="pagination-centered">
      <%= will_paginate @entities %>
    </div>
  </div>
</div>
