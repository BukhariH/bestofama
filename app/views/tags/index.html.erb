<% content_for :title, "Popular Tags Page " + params[:page].to_s + " :: BestofAMA" %>
<div class="row">
  <div class="span12">
    <h1>Most Popular Tags</h1>
    <% @tags.each do |t| %>
        <hr/>
        <h3><%= link_to t, tag_path(t.name) %>
          <small><%= t.count %> results</small>
        </h3>

        <ul class="thumbnails">
          <% Entity.tagged_with(t).where("entities.avatar_file_name != ''").sample(6).each do |e| %>
              <li class="span2">
                <%= link_to image_tag(e.avatar.url(:medium)), entity_path(e), :class => 'thumbnail' %>
                <h5 class="muted" style="text-align: center;"><%= e.name %></h5>
              </li>
          <% end %>
        </ul>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="span12">
    <div class="pagination-centered">
      <%= will_paginate @tags %>
    </div>
  </div>
</div>
