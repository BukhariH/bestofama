<% content_for :title, "Entities Directory Page " + params[:page].to_s + " :: BestofAMA" %>
<div class="row">
  <div class="span6">
    <h1>Entities</h1>
  </div>
  <div class="span6" style="padding-top: 15px;">
    <ul class="breadcrumb">
      <li><strong>Order by:</strong></li>
      <li style="margin-left: 20px;"><%= image_tag("badges/grey.png") %> <%= link_to "Popularity", entities_path %>
        <span class="divider">|</span></li>
      <li><%= image_tag("badges/blue.png") %> <%= link_to "Comment Karma", entities_path(:order => "comment_karma") %>
        <span class="divider">|</span></li>
      <li><%= image_tag("badges/green.png") %> <%= link_to "Link Karma", entities_path(:order => "link_karma") %></li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="span12">
    <% @entities.each do |e| %>
        <hr/>
        <%= render :partial => "snippet", :locals => { :e => e } %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="span12">
    <div class="pagination-centered">
      <%= will_paginate @entities %>
    </div>
  </div>
</div>