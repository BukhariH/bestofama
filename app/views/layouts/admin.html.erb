<!DOCTYPE html>
<html>
<head>
  <title>Admin Panel</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <style>
      body {
          padding-top: 60px;
      }
  </style>
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="#">Admin Panel</a>

      <div class="nav-collapse collapse">
        <ul class="nav pull-right">
          <li><%= link_to "AMAs", admin_amas_path %></li>
          <li><%= link_to "Comments", admin_comments_path %></li>
          <li><%= link_to "Entities", admin_entities_path %></li>
          <li><%= link_to "Users", admin_users_path %></li>
          <li><%= link_to "Meta", admin_meta_path %></li>
          <li><%= link_to "Admins", admin_admins_path %></li>
          <li><%= link_to "Logout", root_path %></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <%= yield %>
</div>
</body>
</html>
