- content_for :title, "#{@ama.title} :: BestofAMA"

- cache ["info", @ama] do
  .row.ama
    .col-2.col-sm-2.col-lg-1
      .karma-meter-large= karma_meter(@ama.karma).html_safe

    .col-10.col-sm-10.col-lg-11
      .page-header
        h4= @ama.title.html_safe
        = render 'share'

      - if !@ama.content.blank?
        .well.well-small.ama-content= @ama.content.html_safe
        p.ama-meta
          strong Comments
          | :&nbsp;
          = @ama.comments
          | &nbsp;&bull;&nbsp;
          strong Responses:&nbsp;
          = @ama.responses
          |  &nbsp;&bull;&nbsp;
          strong Date:
          | &nbsp;
          = @ama.date
          = link_to "source", reddit_ama_path(@ama.permalink), :class => "pull-right", :rel => :nofollow

- cache ["comments", @ama], :skip_digest => true do
  .row.ama.ama-comments
    .col-12.col-sm-12.col-lg-12
      .page-header
        h4 Comments
      = print_comments(@ama, @ama, 0).html_safe